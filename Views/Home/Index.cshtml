@model IEnumerable<UploadUser>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <span class="d-inline-block"> <a asp-action="Add" asp-controller="Home" class="btn btn-primary">Upload FIles</a></span>
    <span class="d-inline-block"> <a asp-action="Search" asp-controller="Home" class="btn btn-primary">View Uploads</a></span>
</div>
<div class="row">
    <p >@ViewBag.Success</p>
</div>
<div class="row">
    <div class="col-md-10 offset-1">
        <table class="table table-hover table-bordered">
            <thead class="bg-primary text-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Transaction Id</th>
                </tr>
            </thead>
            <tbody>
                @{ var i = 1;}
                @foreach (var upload in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@upload.Name</td>
                        <td>@upload.Email</td>
                        <td>@upload.TransactionId</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        
        </div>
        </div>

